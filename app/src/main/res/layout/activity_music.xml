<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MusicActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#A4ACA7">  <!-- Light gray color -->

        <ImageView
            android:id="@+id/backImageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back"
            android:padding="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:clickable="true"
            android:focusable="true"
            app:tint="#FFFFFF" />  <!-- White color tint -->


    <!-- New section for Album cover, name, and description -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="10dp"
        android:orientation="horizontal">

        <!-- Album Cover Image -->
        <ImageView
            android:id="@+id/albumCoverImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"/>

        <!-- Vertical LinearLayout for Album Name and Description -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:paddingStart="10dp">

            <!-- Album Name -->

            <TextView
                android:id="@+id/playlistNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Playlist Name"
                android:textSize="20sp"
                android:layout_gravity="start"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                android:textColor="#FFFFFF"/>  <!-- Added margin at the bottom -->

            <!-- Album Description -->
            <TextView
                android:id="@+id/playlistDescriptionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Playlist Description"
                android:textSize="14sp"
                android:layout_gravity="start"
                android:textColor="#E0E0E0"/>

        </LinearLayout>

    </LinearLayout>
    </LinearLayout>
    <ListView
        android:id="@+id/musiclistListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:layout_marginTop="0dp" />
</LinearLayout>
